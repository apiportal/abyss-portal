            <email>halil.ozkan@verapi.com</email>
            <url>https://www.linkedin.com/in/halil-%C3%B6zkan-796bbb2/</url>
            <organization>Verapi</organization>
            <roles>
                <role>Enterprise Architect</role>
            </roles>
            <timezone>+3</timezone>
        </developer>
        <developer>
            <name>İsmet Faik SAĞLAR</name>
            <id>faik.saglar</id>
            <email>faik.saglar@verapi.com</email>
            <url>https://www.linkedin.com/in/ismet-faik-saglar-a799587/</url>
            <organization>Verapi</organization>
            <roles>
                <role>Software Architect</role>
